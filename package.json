{
  "name": "adnd-website",
  "version": "1.0.0",
  "main": "index.js",
   "scripts": {
    "dev": "run-p dev:*",
    "dev:sass": "sass --watch src/assets/scss:src/assets/css --style=expanded --source-map",
    "dev:serve": "live-server src --port=5173",

    "build": "run-s build:*",
    "build:clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build:html": "node -e \"require('fs').cpSync('src','dist',{recursive:true})\"",
    "build:css": "sass src/assets/scss/main.scss dist/assets/css/main.css --style=compressed --no-source-map && NODE_ENV=production postcss dist/assets/css/main.css -o dist/assets/css/main.css",
    "build:js": "terser dist/assets/js/main.js -c -m -o dist/assets/js/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.97.2",
    "terser": "^5.46.0"
  }
}
